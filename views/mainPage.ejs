<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        .container {
      border: 1px solid;
      border-color : dimgray;
      padding : 5px; /*untuk ngasihh lebar background*/
      margin: 10px;
      justify-content:flex-start;
      border-radius : 15px;
      text-align:center;
      width: 1320px;
    height: auto;
    }
    .label {
      padding : 5px; /*untuk ngasihh lebar background*/
      margin: 10px;
      justify-content:flex-start;
      text-align:center;
      width: 1220px;
      height: auto;
    }
  

    </style>
<title>Sekolah Kembang Kuncup</title>
</head>
<header>
    <a href="/">Logout</a>
</header>
<body>
    <div class="container">
    <center>
    <table>
        <h2 style="font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif">Data Siswa</h2>
        <thread>
            <tr>
                <th>No</th>
                <th></th>
                <th></th>
                <th></th>
                <th>Nama</th>
                <th></th>
                <th></th>
                <th></th>
                <th>Tanggal Lahir</th>
                <th></th>
                <th></th>
                <th></th>
                <th>Kelas</th>
                <th></th>
                <th></th>
                <th></th>
                <th>Alamat</th>
                <th></th>
                <th></th>
                <th></th>
                <th>No. Handphone</th>
                <th></th>
                <th></th>
                <th></th>
                <th>Nama Orangtua</th>
                <th></th>
                <th></th>
                <th></th>
                <th>No. Hp. Orangtua</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thread>
        <tbody>
            <% data.forEach((siswa, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td><%= siswa.name %></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td><%= siswa.tgl_lahir %></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td><%= siswa.kelas %></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td><%= siswa.alamat %></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td><%= siswa.no_hp %></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td><%= siswa.nama_ortu %></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td><%= siswa.no_hp_ortu %></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        <a href="/admin/edit/ <%= siswa.id %>">Edit</a>
                        <a
                            href="/admin/delete/<%= siswa.id %>"
                            onclick="return confirm('apakah anda yakin ingin menghapus?')"> hapus</a>
                    </td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            
            <% }) %>
        </tbody>
        </div>
    </table>
</center>
</div>
    <div class="container">
        <table>
    <h2>Tambah Data Siswa</h2>
    <tbody>
    <form action="admin/siswa-register" method="POST">
        <div class="label">
        <label for="name">Nama :</label>
        <input type="text" id="name" name="name" style="width:500px"/>
        </div>
        <div class="label">
        <label for="tgl_lahir">Tanggal Lahir:</label>
        <input type="text" id="tgl_lahir" name="tgl_lahir" style="width:450px"/>
        </div>
        <div class="label">
        <label for="kelas">Kelas:</label>
        <select id="kelas" name="kelas" required style="width:510px">    
            <option value="IPA">IPA</option>
            <option value="IPS">IPS</option>
            <option value="MTK">Matematika</option>
        </select>
        </div>
        <div class="label">
        <label for="alamat">Alamat:</label>
        <input type="text" id="alamat" name="alamat" style="width:490px"/>
        </div>
        <div class="label">
        <label for="no_hp">Nomor Handphone:</label>
        <input type="text" id="no_hp" name="no_hp" style="width:410px" />
        </div>
        <div class="label">
        <label for="nama_ortu">Nama Orangtua:</label>
        <input type="text" id="nama_ortu" name="nama_ortu" style="width:430px" />
        </div>
        <div class="label">
        <label for="no_hp_ortu">No. hp. Orangtua:</label>
        <input type="text" id="no_hp_ortu" name="no_hp_ortu" style="width:420px" />
        </div>
        <button type="submit">Tambah</button>
    </form>
</div>
    </div>
</body>
<footer>
</footer>
</html>